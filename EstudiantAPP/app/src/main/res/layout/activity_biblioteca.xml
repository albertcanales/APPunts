<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FilterBiblioActivity"
    android:orientation="vertical"
    android:padding="5dp">

    <EditText android:id="@+id/universitat_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Universitat"
        android:textSize="20dp" />

    <EditText android:id="@+id/grau_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grau"
        android:textSize="20dp" />

    <EditText android:id="@+id/assignatura_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assignatura"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button android:id="@+id/buscar_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"
        />

</LinearLayout>