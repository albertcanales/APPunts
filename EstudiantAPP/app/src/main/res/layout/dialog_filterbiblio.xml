<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FilterBiblioActivity"
    android:orientation="vertical"
    android:padding="15dp">

    <AutoCompleteTextView android:id="@+id/grau_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grau"
        android:textSize="20dp" />

    <AutoCompleteTextView android:id="@+id/assignatura_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assignatura"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content">

        <Button android:id="@+id/cancel_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/design_default_color_primary"
            android:text="Enrere"
            />

        <Button android:id="@+id/buscar_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/design_default_color_primary"
            android:text="Buscar"
            />


    </LinearLayout>



</LinearLayout>